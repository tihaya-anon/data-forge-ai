{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Agent Task",
  "description": "Task definition for parallel AI agent development",
  "type": "object",
  "properties": {
    "task": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { 
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "blocked"]
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"]
        },
        "assignment": {
          "type": "object",
          "properties": {
            "agent": { "type": "string" },
            "branch": { "type": "string" },
            "worktree": { "type": "string" },
            "assigned_at": { "type": ["string", "null"] }
          }
        },
        "description": { "type": "string" },
        "objectives": {
          "type": "array",
          "items": { "type": "string" }
        },
        "scope": {
          "type": "object",
          "properties": {
            "allowed_paths": {
              "type": "array",
              "items": { "type": "string" }
            },
            "forbidden_paths": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "dependencies": {
          "type": "object",
          "properties": {
            "requires": {
              "type": "array",
              "items": { "type": "string" }
            },
            "blocks": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "interfaces": {
          "type": "object",
          "properties": {
            "provides": { "type": "array" },
            "consumes": { "type": "array" }
          }
        },
        "technical_requirements": {
          "type": "object",
          "properties": {
            "language": { "type": "string" },
            "framework": { "type": "string" },
            "patterns": {
              "type": "array",
              "items": { "type": "string" }
            },
            "testing": {
              "type": "object",
              "properties": {
                "required": { "type": "boolean" },
                "coverage_min": { "type": "number" },
                "types": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        },
        "acceptance_criteria": {
          "type": "array",
          "items": { "type": "string" }
        },
        "references": {
          "type": "object",
          "properties": {
            "docs": {
              "type": "array",
              "items": { "type": "string" }
            },
            "examples": {
              "type": "array",
              "items": { "type": "string" }
            },
            "related_tasks": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "progress": {
          "type": "object",
          "properties": {
            "started_at": { "type": ["string", "null"] },
            "completed_at": { "type": ["string", "null"] },
            "estimated_hours": { "type": ["number", "null"] },
            "actual_hours": { "type": ["number", "null"] },
            "notes": { "type": "array" },
            "blockers": { "type": "array" }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "created_at": { "type": ["string", "null"] },
            "updated_at": { "type": ["string", "null"] },
            "created_by": { "type": "string" },
            "version": { "type": "number" }
          }
        }
      },
      "required": ["id", "name", "status"]
    }
  },
  "required": ["task"]
}
